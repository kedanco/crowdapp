



<div id="mapBody">

    <div id="map"></div>


</div>

<script type="text/javascript">


function initMap() {
  // Create the map.
  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 12,
    center: {lat: 1.350452, lng:103.820581},
    mapTypeId: 'roadmap'
  });

  var transitLayer = new google.maps.TransitLayer();
  transitLayer.setMap(map);

  // Draw Circles
  <% @areas.each do |areaCircle| %>

     var coordinates = {lat: <%= areaCircle.lat %>,lng: <%= areaCircle.lng %>}

     var crowdDensityCircle = new google.maps.Circle({
          strokeColor: '#FF0000',
          strokeOpacity: 0.8,
          strokeWeight: 3,
          fillColor: '#FF0000',
          fillOpacity: 0.35,
          map: map,
          center: coordinates,
          radius: Math.random()*5000
      });

  <% end %>

}



 </script>

  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['MAPS_KEY'] %>&callback=initMap&language=en&region=SG">
    </script>
